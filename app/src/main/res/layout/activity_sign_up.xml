<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".SignUpActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="215dp"
        android:background="@drawable/lolo">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="215dp"
            android:background="@drawable/bglight"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="104dp"
            app:srcCompat="@drawable/book" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Book Addict"
            android:fontFamily="@font/libre_caslon_text_bold"
            android:textAllCaps="false"
            android:textColor="#FAFFFD"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_marginTop="12dp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="19dp"
            android:layout_marginBottom="20dp"
            android:elevation="10dp"
            app:cardCornerRadius="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Register Now"
                    android:fontFamily="@font/libre_caslon_text_bold"
                    android:layout_gravity="center"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:textColor="@color/title_color"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Full Name"
                    android:fontFamily="@font/libre_caslon_text_regular"
                    android:layout_marginTop="14dp"
                    android:textStyle="bold"
                    android:textColor="@color/title_color"/>

                <EditText
                    android:id="@+id/edit_text_full_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/libre_caslon_text_regular"
                    android:inputType="textPersonName"
                    android:textSize="16dp"
                    android:hint="Your full name"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phone Number"
                    android:fontFamily="@font/libre_caslon_text_regular"
                    android:layout_marginTop="14dp"
                    android:textStyle="bold"
                    android:textColor="@color/title_color"/>

                <EditText
                    android:id="@+id/edit_text_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/libre_caslon_text_regular"
                    android:inputType="phone"
                    android:textSize="16dp"
                    android:hint="10 digit phone"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email Address"
                    android:fontFamily="@font/libre_caslon_text_regular"
                    android:layout_marginTop="14dp"
                    android:textStyle="bold"
                    android:textColor="@color/title_color"/>

                <EditText
                    android:id="@+id/edit_text_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/libre_caslon_text_regular"
                    android:inputType="textEmailAddress"
                    android:textSize="16dp"
                    android:hint="Email"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Password"
                    android:textStyle="bold"
                    android:fontFamily="@font/libre_caslon_text_regular"
                    android:layout_marginTop="14dp"
                    android:textColor="@color/title_color"/>

                <EditText
                    android:id="@+id/edit_text_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/libre_caslon_text_regular"
                    android:textSize="16dp"
                    android:inputType="textPassword"
                    android:hint="Strong password"/>

                <Button
                    android:id="@+id/button_sign_up"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Sign Up"
                    android:background="@drawable/button_rounded"
                    android:fontFamily="@font/libre_caslon_text_regular"
                    android:textColor="@color/primary_white"
                    android:textAllCaps="false"
                    android:textSize="14dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"/>

                <TextView
                    android:id="@+id/text_view_go_to_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/login"
                    android:fontFamily="@font/libre_caslon_text_regular"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:textStyle="normal"
                    android:textSize="14dp"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    </RelativeLayout>
</ScrollView>