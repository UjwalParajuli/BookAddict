<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="105dp"
        android:background="@drawable/lolo">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="105dp"
            android:background="@drawable/bglight"/>
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:layout_marginBottom="20dp"
        android:elevation="10dp"
        app:cardCornerRadius="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="25dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit Profile"
                android:fontFamily="@font/libre_caslon_text_bold"
                android:layout_gravity="center"
                android:textSize="20dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/title_color"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Full Name"
                android:fontFamily="@font/libre_caslon_text_regular"
                android:layout_marginTop="20dp"
                android:textSize="14dp"
                android:textColor="@color/title_color"/>

            <EditText
                android:id="@+id/edit_text_full_name_edit_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/libre_caslon_text_regular"
                android:inputType="textPersonName"
                android:textSize="16dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone Number"
                android:fontFamily="@font/libre_caslon_text_regular"
                android:layout_marginTop="20dp"
                android:textSize="14dp"
                android:textColor="@color/title_color"/>

            <EditText
                android:id="@+id/edit_text_phone_edit_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/libre_caslon_text_regular"
                android:inputType="phone"
                android:textSize="16dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email Address"
                android:fontFamily="@font/libre_caslon_text_regular"
                android:layout_marginTop="20dp"
                android:textColor="@color/title_color"
                android:textSize="14dp"/>

            <EditText
                android:id="@+id/edit_text_email_edit_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/libre_caslon_text_regular"
                android:inputType="textEmailAddress"
                android:textSize="16dp"
                />

            <Button
                android:id="@+id/button_update_profile"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Update Profile"
                android:background="@drawable/button_rounded"
                android:fontFamily="@font/libre_caslon_text_regular"
                android:textColor="@color/primary_white"
                android:textAllCaps="false"
                android:textSize="14dp"
                android:layout_gravity="center"
                android:layout_marginTop="35dp"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>
